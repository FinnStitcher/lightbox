{{#each posts as |p|}}
    <article>
        <div class="post-header">
            <h2 class="post-title">{{p.title}}</h2>
            <span class="post-author">{{p.user.username}}</span>
            <span class="post-timestamp">{{p.created_at}}</span>
        </div>

        <div class="post-text">
            {{p.text}}
        </div>

        <div class="post-footer">
            {{p.comments.length}} comment(s)
        </div>
    </article>
{{/each}}