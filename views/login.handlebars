<div class="flex user-info-container margin-auto">
    <form id="login" class="user-info-form">
        <h2>Log in</h2>

        <div>
            <label for="username-login">Username:</label>
            <input id="username-login" type="text">
        </div>

        <div>
            <label for="password-login">Password:</label>
            <input id="password-login" type="password">
        </div>

        <button type="submit">Submit</button>
    </form>

    <div class="vertical-rule"></div>

    <form id="signup" class="user-info-form">
        <h2>Sign up:</h2>

        <div>
            <label for="username-signup">Username:</label>
            <input id="username-signup" type="text">
        </div>

        <div>
            <label for="email-signup">Email:</label>
            <input id="email-signup" type="email">
        </div>

        <div>
            <label for="password-signup">Password:</label>
            <input id="password-signup" type="password">
        </div>

        <button type="submit">Submit</button>
    </form>
</div>

<script src="/js/login-signup.js"></script>