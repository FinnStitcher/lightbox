{{#with user}}
    <section class="flex flex-col text-center">
        <h2>Welcome to your dashboard, {{username}}.</h2>

        <a class="link-btn margin-auto" href="/create">Make a new post</a>
    </section>

    <hr>

    <section class="flex flex-col">
        <h2>Your Posts</h2>

        <div class="flex flex-col">
            {{#if posts.length}}
                {{> post-list posts}}
            {{else}}
                <p>You haven't made any posts.</p>
            {{/if}}
        </div>
    </section>

    <hr>

    <section class="flex flex-col">
        <h2>Your Comments</h2>

        <div class="flex flex-col comment-section">
            {{#if comments.length}}
                {{> comments comments}}
            {{else}}
                <p>You haven't made any comments.</p>
            {{/if}}
        </div>
    </section>

{{/with}}