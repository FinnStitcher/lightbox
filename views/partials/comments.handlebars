{{#each this as |c|}}
    <div class="comment">
        <p class='comment-header'>
            {{#if c.user.username}}
                {{c.user.username}}
            {{else}}
                You 
            {{/if}}
            said on
            {{format_date created_at}}:
        </p>

        <p class='comment-body'>
            {{c.comment_text}}
        </p>
    </div>
{{/each}}